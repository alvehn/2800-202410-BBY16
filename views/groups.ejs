                let jsonObject = {};
                jsonObject["group_id"] = group;
                // fetch friend username and status from the database
                await fetch('/groups/get_group_name', {
                    method: 'post',
                    headers: {
                        'Content-Type': 'application/json' // Set Content-Type to JSON
