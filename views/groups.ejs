                    console.error('Error:', error);
                });
            // Creates the friends card
            let cardTemplate = document.getElementById("groupCardTemplate");
            let groupName = "test";
            let membersCount = 0;
            for (let group of groups) {
                let newcard = cardTemplate.content.cloneNode(true);
