<%- include("templates/default_header") %>
<div class="flex items-center justify-center h-screen bg-cover bg-center">
    <div class="flex flex-col items-center space-y-6 p-8 bg-white shadow-md rounded-md">
        <h1 class="text-2xl font-semibold">Reset your password via email</h1>
        <p>Your email: <%= email.replace(/(.{3}).+(.{2})/, '$1****$2') %></p>
        
        <div class="flex flex-col space-y-4">
            <form action="/send_code" method="POST" class="flex flex-col space-y-4">
                <input type="hidden" name="email" value="<%= email %>">
                <button type="submit" class="py-2 px-4 bg-argentinian-blue text-white rounded-md">Send Code</button>
            </form>

            <form action="/verify_code" method="POST" class="flex flex-col space-y-4">
                <% if (codeError) { %>
                    <p class="text-red-500">Invalid or expired code</p>
                <% } %>
                <input type="hidden" name="email" value="<%= email %>">
                <input id="code" name="code" type="text" placeholder="Enter Code" class="p-2 border border-gray-300 rounded-md">
                <button id="verifyButton" type="submit" class="py-2 px-4 bg-celadon text-white rounded-md">Verify Code</button>
            </form>
        </div>
    </div>
</div>
<%- include("templates/default_footer") %>
