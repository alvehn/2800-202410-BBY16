<!doctype html>
<html lang="en">
<head>
  <meta charset="utf-8">
  <meta name="viewport" content="width=device-width, initial-scale=1">
  <link rel="stylesheet" type="text/css" href="/css/stylesheet.css">
  <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/css/bootstrap.min.css" rel="stylesheet"
    integrity="sha384-QWTKZyjpPEjISv5WaRU9OFeRpok6YctnYmDr5pNlyT2bRjXh0JMhjY6hW+ALEwIH" crossorigin="anonymous">
  <script src="https://cdn.tailwindcss.com"></script>
  <title>StudyPals</title>
</head>
<body>

  <button id="dropdownButton" class="absolute z-10 right-5 top-5 text-white bg-blue-500 hover:bg-blue-700 rounded-lg text-sm px-2 py-2 text-center inline-flex items-center" type="button">
    <svg class="w-2.5 h-2.5 ml-3" aria-hidden="true" xmlns="http://www.w3.org/2000/svg" fill="none" viewBox="0 0 10 6">
      <path stroke="currentColor" stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M1 1l4 4 4-4"/>
    </svg>
  </button>
  
<!-- Dropdown menu -->
<div id="dropdown" class="absolute right-5 top-5 z-10 bg-white divide-y divide-gray-100 rounded-lg shadow w-44 hidden">
  <ul class="py-2 text-sm text-gray-700" aria-labelledby="dropdownButton">
    <li>
      <a href="/petshop" class="block px-4 py-2 hover:bg-gray-100">Shop</a>
    </li>
    <li>
      <a href="/petinv" class="block px-4 py-2 hover:bg-gray-100">Inventory</a>
    </li>
    <li>
      <a href="/change_password" class="block px-4 py-2 hover:bg-gray-100">Change Password</a>
    </li>
  </ul>
</div>

<script>
  // JavaScript for toggling the dropdown menu
  document.getElementById('dropdownButton').addEventListener('click', function() {
    const dropdown = document.getElementById('dropdown');
    dropdown.classList.toggle('hidden');
  });

  // Close the dropdown when clicking outside of it
  document.addEventListener('click', function(event) {
    const dropdown = document.getElementById('dropdown');
    const button = document.getElementById('dropdownButton');
    if (!button.contains(event.target) && !dropdown.contains(event.target)) {
      dropdown.classList.add('hidden');
    }
  });
</script>
  